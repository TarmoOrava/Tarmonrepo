#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;
int game(int maxnum);

int main() {
    srand(time(0));
    int maxnum = 40;
    int arvaukset = game(maxnum);
    cout << "Arvauksia tuli: " << arvaukset << endl;

    return 0;
}

int game(int maxnum) {
    int luku = rand() % maxnum + 1;
    int arvaus;
    int arvauslukema = 0;

    while (true) {
        cout << "Arvaa luku (1-" << maxnum << "): ";
        cin >> arvaus;
        arvauslukema++;

        if (arvaus < luku) {
            cout << "Luku on suurempi" << endl;
        } else if (arvaus > luku) {
            cout << "Luku on pienempi" << endl;
        } else {
            cout << "Arvasit oikein" << endl;

            break;
        }
    }

    return arvauslukema;
}
